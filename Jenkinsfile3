pipeline {
    agent {
        docker { image 'maven:3-amazoncorretto-17-debian' }
    }
    stages{
        stage('check current directory'){
            steps{
                sh 'pwd'
               sh 'id'
               sh "mkdir \$(date '+%Y%m%d_%H%M%S')"
                sh 'npm --version'
            }
        }
        stage('python script'){
            agent {docker { image 'python:3.10-slim' }}
            steps{
              sh 'python3 --version'  
            }
        }
    }
}
